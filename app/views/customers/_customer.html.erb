<div class="customer">
  <div class="card-group">
  <div class="card">
    <div class="card-block">
      <h4 class="card-title">
        <%= customer.fullname %>
      </h4>
        <p class="card-text">
          <strong>Phone: </strong><%= customer.phone %> |

          <strong>Email: </strong><%= customer.email %> |

          <strong>Province: </strong>
            <% if customer.province.present? %>
              <%= customer.province.name %>
            <% else %>
              Unknown
              <% end %>
        </p>
      </div>
    </div>
  <div class="card">
    <div class="card-block">
      <h4 class="card-title"></h4>
      <p class="card-text">
        <% if customer.avatar.present? %>
          <%= image_tag customer.avatar, :width => '250', :height => '200' %>
        <% else %>
          Nothing to see here
        <% end %>
      </p>
    </div>
  </div>
</div>
</div>
